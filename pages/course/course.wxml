<view class="topbar">

</view>
<view class="container">
<view class="container_text">课程</view>
</view>

<view class="course-list">
  <view class="title">
    <view class= "title-text">笔画</view>
    <view class="title-icon"><image class="icon" src="/images/list-g.png"></image></view>
  </view>
  <view class="course-item" bindtap="">
    <view class="course-image">
      <image class="course-image" src="/images/coursecover.png"></image>
    </view>
    <view class="course-text">
      <view class="course-title">
        <text>笔画练习</text>
      </view>
      <view class="course-des">
        <text> 等待填写 </text>
      </view>
    </view>
    <view class="course-icon">
      <image class="icon" src="/images/add-g.png" bindtap="collect"></image>
    </view>
  </view>
  <view class="title">
    <view class= "title-text">汉字</view>
    <view class="title-icon" bindtap="toHanzicourse"><image class="icon" src="/images/list-g.png"></image></view>
  </view>
  <view class="course-item" bindtap="HSK1page">
    <view class="course-image">
      <image class="course-image" src="/images/HSK1.png"></image>
    </view>
    <view class="course-text">
      <view class="course-title">
        <text>HSK1 单词表</text>
      </view>
      <view class="course-des">
        <text> 等待填写 </text>
      </view>
    </view>
    <view class="course-icon">
      <image class="icon" src="/images/add-g.png" bindtap="collect"></image>
    </view>
  </view>
</view>




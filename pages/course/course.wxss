/* pages/course/course.wxss */
.topbar{
   background-image: url(https://i.loli.net/2021/04/02/EXadjZ837vzhlUq.jpg);
   width: 375px;
   height: 198px;
}
.space{
  height: 110px;
}
.icon-back{
  display: flex;
}
.topbar_text{
  font-size: 50px;
  padding:50px;
  margin-top: 50px;
}
.container{
  width: 375px;
  height: 60px;
  border-radius: 30px;
  background-color: white;
  margin-top:-30px;
}
.container_text{
  width: 375px;
  height: 60px;
  font-size: 20px;
  text-align: center;
  line-height: 60px;
  color:rgb(49, 124, 150);
  font-weight: bolder;
}

.course-list{
  margin-left: 50px;
  width: 375px;
  flex-direction: column;
  display: flex;
  justify-content: center;
}

.course-item{
  margin-top: 30px;
  width:300px;
  height: 100px;

  display:flex;
  justify-content: center;
}

.course-image{
  width: 80px;
  height: 100px;

  margin-right: 20px;

}

.course-text{
  width: 200px;
  height: 100px;

}

.course-title{
  width: 200px;
  height: 30px;

  font-size:20px;
  color:black;
  font-weight: bolder;
  justify-content: center;
}
.course-des{
  width: 200px;
  height: 70px;

  font-size:15px;
  color:black;
  overflow: hidden;
}
.boxitem{
  display: flex;
  flex-wrap: wrap;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
}

.boxitem :active{
  color: rgb(49, 124, 150);
}

.boxtext{
  font-size: 60px;
  padding:10px 27px;
  border:3rpx solidr red;  
  color:rgb(78, 76, 76);
}



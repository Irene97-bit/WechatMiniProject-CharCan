/* pages/HSK1/wordlist1.wxss */
.topbar{
  width: 375px;
  height: 120px;
  background-color: rgb(245, 147, 49);
}
.topbar-text{
  color:white;
  font-size:60px;
  font-weight: bolder;
  margin-left: 20px;
  padding:30px;
}
.container{
  width: 375px;
  height: 20px;
  border-top-left-radius: 30px;
  border-top-right-radius: 30px;
  background-color: white;
  margin-top:-20px;
}
.course-list{
  margin-left: 50px;
  width: 375px;
  flex-direction: column;
  display: flex;
  justify-content: center;
}

.course-item{
  margin-top: 30px;
  width:300px;
  height: 100px;

  display:flex;
  justify-content: center;
}

.course-image{
  width: 80px;
  height: 100px;

  margin-right: 20px;

}

.course-text{
  width: 200px;
  height: 100px;

}

.course-title{
  width: 200px;
  height: 40px;

  font-size:20px;
  color:black;
  font-weight: bolder;
  justify-content: center;
}
.course-des{
  width: 200px;
  height: 30px;

  font-size:15px;
  color:black;
  overflow: hidden;
}

.divider{
  margin-left: 38px;
  margin-top: 30px;
  width: 300px;
  height: 10px;
  background-color: rgb(245, 147, 49);
  border-radius: 20px;
}

.listbox{
  
  width: 375px;
  height: 400px;
  display: flex;
  flex-direction: column;
  align-items: center;

}
.listitem{
  margin-top: 20px;
  width: 300px;
  height: 100px;
  display: flex;
  flex-direction:row;
  border-radius: 20px;
  border:1px solid  rgb(243, 213, 182);
}
.listhanzi{
  width: 100px;
  height: 100px;
  font-size: 50px;
  display: flex;
  align-items: center;
  justify-content: center;

}
.list{
  width: 200px;
  height: 100px;
  display: flex;
  flex-direction:column;
}

.list-topright{
  width: 200px;
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

}
.listpinyin-icon{
  width: 40px;
  height: 20px;
  /*border:2px solid   rgb(19, 154, 196);
    border-radius: 8px;*/
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color:rgb(19, 154, 196);
}
.listpinyin{
  width: 90px;
  height: 50px;
  margin-left: 10px;
  display: flex;
  align-items: center;

}
.icon{
 width: 50px;
 height: 50px;
 display: flex;
 align-items: center;
 justify-content: center;
}
.icon-image{
  width: 30px;
  height: 30px;
}
.list-bottomright{
  width: 200px;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.listexp-icon{
  width: 28px;

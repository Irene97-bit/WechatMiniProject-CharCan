/* pages/hanzicourse/hanzicourse.wxss */
.topbar{
  background-image: url(http://2000022764.zhangqx.com:9999/images/bg-s.png);
  width: 375px;
  height: 198px;
  background-repeat:no-repeat;
  background-size:cover;
}

.container{
  width: 375px;
  height: 60px;
  border-radius: 30px;
  background-color: white;
  margin-top:-30px;
}

.container_text{
  width: 375px;
  height: 60px;
  font-size: 20px;
  text-align: center;
  line-height: 60px;
  color:rgb(49, 124, 150);
  font-weight: bolder;
}

.course-list{
  margin-top: 20px;
  width: 375px;
  flex-direction: column;
  display: flex;
  align-items: center;
}
.title-text{
  margin-left: 20px;
  font-size: 20px;
  font-weight: bold;
  color:rgb(142,190,173);
}

.course-item{
  width:300px;
  height: 100px;
  margin-bottom: 20px;
  display:flex;
  justify-content: center;
}

.course-image{
  width: 80px;
  height: 100px;
  margin-right: 20px;

}

.course-text{
  width: 160px;
  height: 100px;

}

.course-title{
  width: 1600px;
  height: 30px;

  font-size:20px;
  color:black;
  font-weight: bolder;
  justify-content: center;
}
.course-des{
  width: 160px;
  height: 70px;

  font-size:15px;
  color:black;
  overflow: hidden;
}
.course-icon{
  width: 40px;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon{
  width: 40px;
  height: 40px;
}
